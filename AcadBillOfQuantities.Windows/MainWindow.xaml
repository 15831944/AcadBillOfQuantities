                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Fill="White" Stroke="Black" StrokeThickness="1" Width="8" Height="8"/>
                        <CheckBox Margin="5,0,5,0"></CheckBox>
                        <TextBlock Text="2"/>
                        <Button Content="Info"/>
                        <Button Content="Delete"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Fill="White" Stroke="Black" StrokeThickness="1" Width="8" Height="8"/>
                        <CheckBox Margin="5,0,5,0"></CheckBox>
                        <TextBlock Text="3"/>
                        <Button Content="Info"/>
                        <Button Content="Delete"/>
                    </StackPanel>
                </TreeViewItem>
            </TreeViewItem>
        </TreeView>
    </Grid>
</Window>
